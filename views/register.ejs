<%- include partials/header.ejs %>


<div class="container-fluid">
  <div class="row" style="margin-top:100px;">
  	<div class="col-sm-12 col-md-7 col-lg-5 mx-auto">
		<form class="border border-light p-5 z-depth-1-half" action="/register" method="POST">

		    <p class="h4 mb-4">Sign up</p>

				
				<%if(typeof error !== undefined && error != ""){%>
					<div class="alert alert-primary" role="alert">
							<%=error%>
					</div>
				<%}%>
				
		    <div class="form-group row">
			    <label for="Username" class="col-sm-2 col-form-label"><i class="fas fa-user prefix"></i></label>
			    <div class="col-sm-10">
			      <div class="md-form mt-0">
			        <input type="text" class="form-control" id="UserName" name="username" placeholder="Username">
			        <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
		        		Choose unique Username
		    		</small>
			      </div>
			    </div>
			  </div>
		    <div class="form-group row">
			    <label for="inputPassword3MD" class="col-sm-2 col-form-label"><i class="fas fa-key prefix"></i></label>
			    <div class="col-sm-10">
			      <div class="md-form mt-0">
			        <input type="password" name="password" class="form-control" id="Password" placeholder="Password">
			        <small id="defaultRegisterFormPhoneHelpBlock" class="form-text text-muted mb-4">
		        		Use 8 character password for more security
		    		</small>
			      </div>
			    </div>
			  </div>
		    <button class="btn btn-info my-4 btn-block" type="submit">Sign Up</button>
		        <p>Already have an
		        <em>Account?</em> Login
		        <a href="/login">Here</a>
		</form>
</div>
